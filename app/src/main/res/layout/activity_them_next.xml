<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_next"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView

        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nhấn vào camera để tải ảnh lên"
        android:textColor="#3b64ea"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Chú ý: Ảnh không liên quan sẽ bị xóa mà không báo trước"
        android:textColor="#ff0000"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/addimage" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/ed_tinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tỉnh (VD : Hà Nội )"
            android:singleLine="true"
            android:textColor="@color/colorBlack" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/ed_quan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quận, Huyện (VD : Nam Từ Liêm )"
            android:singleLine="true"
            android:textColor="@color/colorBlack" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/ed_dc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="(VD: SN 12,tổ 12,Ngõ 19, Làng Nguyên Xá"
            android:singleLine="true"
            android:textColor="@color/colorBlack" />
    </android.support.design.widget.TextInputLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/selector_btnthem"
            android:padding="10dp"
            android:text="Đăng tin"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_out_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/selector_btnthem"
            android:padding="10dp"
            android:text="Thoát "
            android:textColor="#fff" />
    </RelativeLayout>
</LinearLayout>