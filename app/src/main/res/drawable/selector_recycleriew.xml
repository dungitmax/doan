<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#fa9e0a"/>
            <stroke android:color="#25dfcd"
                android:width="1dp"/>
        </shape>
    </item>

    <item >
        <shape>
            <solid android:color="#ffffff"/>
            <stroke android:color="#c1b8b8"
                android:width="1dp"/>
        </shape>
    </item>

</selector>